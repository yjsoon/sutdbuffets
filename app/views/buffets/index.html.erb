<p id="notice"><%= notice %></p>

<h1>Buffets in SUTD</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Location</th>
      <th>Picture</th>
      <th colspan="3">Admin</th>
    </tr>
  </thead>

  <tbody>
    <% @buffets.each do |buffet| %>
      <tr>
        <td><%= buffet.title %></td>
        <td><%= buffet.location %></td>
        <td><%= image_tag(buffet.picture_url, width: 200) if buffet.picture.present? %></td>
        <td><%= link_to 'See Details', buffet %></td>
        <td><%= link_to 'Edit', edit_buffet_path(buffet) %></td>
        <td><%= link_to 'Destroy', buffet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

